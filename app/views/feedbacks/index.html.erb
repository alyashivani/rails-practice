<h2>Feedbacks</h2>
<% @product.feedbacks.each do |feed| %>
  <p>
    <strong>Name:</strong>
    <%= feed.username %>
  </p>

  <p>
    <strong>Feedback:</strong>
    <%= feed.message %>
  </p>

  <% if feed.images.attached? %>
    <% feed.images.each do |image| %>
      <%= image_tag url_for(image.variant(resize_to_limit: [300, 300]).processed )  %> 
    <% end %>
  <% end %>
<% end %>